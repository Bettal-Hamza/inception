NAME = inception
COMPOSE = docker-compose
UID := $(shell id -u)

all: up

up:
	@echo "ðŸ”§ Starting containers..."
	@sudo $(COMPOSE) up -d --build

down:
	@echo "ðŸ›‘ Stopping containers..."
	@sudo $(COMPOSE) down

fclean: down
	@echo "ðŸ”¥ Removing volumes..."
	@sudo docker volume rm db_data wp_data || true

